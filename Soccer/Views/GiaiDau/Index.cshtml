@model IEnumerable<Soccer.Models.GiaiDau>
@{
    ViewBag.Title = "Danh sách Giải đấu";
}
<div class="container mt-4">
    <h2 class="mb-4">Danh sách Giải đấu</h2>
    <p>
        @Html.ActionLink("Tạo mới Giải đấu", "Create", null, new { @class = "btn btn-primary mb-3" })
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Tên Giải đấu</th>
                    <th>Quốc gia</th>
                    <th>Mùa giải</th>
                    <th>Ngày bắt đầu</th>
                    <th>Ngày kết thúc</th>
                    <th>Hình ảnh</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenGiaiDau)</td>
                    <td>@Html.DisplayFor(modelItem => item.QuocGia)</td>
                    <td>@Html.DisplayFor(modelItem => item.MuaGiai)</td>
                    <td>@string.Format("{0:dd/MM/yyyy}", item.NgayBatDau)</td>
                    <td>@string.Format("{0:dd/MM/yyyy}", item.NgayKetThuc)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.HinhAnh))
                        {
                            <img src="@Url.Content(item.HinhAnh)" alt="@item.TenGiaiDau" class="img-thumbnail" style="width: 50px; height: 50px;" />
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaGiaiDau }, new { @class = "btn btn-sm btn-warning" })
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaGiaiDau }, new { @class = "btn btn-sm btn-info" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaGiaiDau }, new { @class = "btn btn-sm btn-danger" })
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>