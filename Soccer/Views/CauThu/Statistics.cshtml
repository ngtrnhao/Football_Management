@model Soccer.Models.CauThu

@{
    ViewBag.Title = "Thống kê cầu thủ";
}

<h2>Thống kê cầu thủ</h2>

<div>
    <h4>@Model.Ho @Model.Ten</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <img src="@Url.Content(Model.HinhAnh)" alt="@Model.Ho @Model.Ten" class="img-responsive" />
        </div>
        <div class="col-md-8">
            <dl class="dl-horizontal">
                <dt>Họ tên</dt>
                <dd>@Model.Ho @Model.Ten</dd>

                <dt>Đội bóng</dt>
                <dd>@Model.DoiBong.TenDoi</dd>

                <dt>Vị trí</dt>
                <dd>@Model.ViTri</dd>

                <dt>Số áo</dt>
                <dd>@Model.SoAo</dd>
            </dl>
        </div>
    </div>

    <h4>Thống kê mùa giải</h4>
    <div class="row">
        <div class="col-md-3 text-center">
            <h3>@Model.SoBanThang</h3>
            <p>Bàn thắng</p>
        </div>
        <div class="col-md-3 text-center">
            <h3>@Model.SoKienTao</h3>
            <p>Kiến tạo</p>
        </div>
        <div class="col-md-3 text-center">
            <h3>@Model.SoTheVang</h3>
            <p>Thẻ vàng</p>
        </div>
        <div class="col-md-3 text-center">
            <h3>@Model.SoTheDo</h3>
            <p>Thẻ đỏ</p>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.MaCauThu }) |
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>