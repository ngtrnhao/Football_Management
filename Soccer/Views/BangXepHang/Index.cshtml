@model IEnumerable<Soccer.Models.BangXepHang>

@{
    ViewBag.Title = "Bảng Xếp Hạng";
}

<h2>Bảng Xếp Hạng</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Vị Trí</th>
            <th>Đội</th>
            <th>Số Trận</th>
            <th>Thắng</th>
            <th>Hòa</th>
            <th>Thua</th>
            <th>Bàn Thắng</th>
            <th>Bàn Thua</th>
            <th>Hiệu Số</th>
            <th>Điểm</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select((value, index) => new { value, index }))
        {
            <tr>
                <td>@(item.index + 1)</td>
                <td>@item.value.DoiBong.TenDoi</td>
                <td>@item.value.SoTranDau</td>
                <td>@item.value.SoTranThang</td>
                <td>@item.value.SoTranHoa</td>
                <td>@item.value.SoTranThua</td>
                <td>@item.value.BanThang</td>
                <td>@item.value.BanThua</td>
                <td>@item.value.HieuSo</td>
                <td>@item.value.Diem</td>
            </tr>
        }
    </tbody>
</table>