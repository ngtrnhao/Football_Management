@model Soccer.Models.TranDau
@{
    ViewBag.Title = "Chỉnh sửa trận đấu đang diễn ra";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Chỉnh sửa trận đấu đang diễn ra</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="card">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaTran)

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.DoiBong.TenDoi, "Đội nhà", new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">
                        <p class="form-control-plaintext">@Model.DoiBong.TenDoi</p>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.DoiBong1.TenDoi, "Đội khách", new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">
                        <p class="form-control-plaintext">@Model.DoiBong1.TenDoi</p>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.TiSoDoiNha, "Tỉ số đội nhà", new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.TiSoDoiNha, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TiSoDoiNha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.TiSoDoiKhach, "Tỉ số đội khách", new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.TiSoDoiKhach, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TiSoDoiKhach, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-9 offset-sm-3">
                        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                        @Html.ActionLink("Quay lại danh sách", "DangDienRa", null, new { @class = "btn btn-secondary ml-2" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>