@model IEnumerable<Soccer.Models.DoiBong>
@{
    ViewBag.Title = "Danh sách đội bóng";
}

<h2 class="text-center mb-4">Danh sách đội bóng</h2>

<p class="mb-3">
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Logo</th>
                <th>Tên đội</th>
                <th>Thành phố</th>
                <th>Sân nhà</th>
                <th>Năm thành lập</th>
                <th>Giải đấu</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.Logo" alt="@item.TenDoi" class="img-thumbnail" style="width:50px;" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.TenDoi)</td>
                    <td>@Html.DisplayFor(modelItem => item.ThanhPho)</td>
                    <td>@Html.DisplayFor(modelItem => item.SanVanDong.TenSan)</td>
                    <td>@Html.DisplayFor(modelItem => item.NamThanhLap)</td>
                    <td>@Html.DisplayFor(modelItem => item.GiaiDau.TenGiaiDau)</td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaDoi }, new { @class = "btn btn-sm btn-warning" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDoi }, new { @class = "btn btn-sm btn-info" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaDoi }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>